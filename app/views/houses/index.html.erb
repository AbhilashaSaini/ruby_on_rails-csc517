<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <h1>Houses</h1>
  <p>List of all the houses available.</p><br>
  <table class="table table-hover">
    <thead>
    <tr>
      <th>Location</th>
      <th>Address</th>
      <th>House owner</th>
      <th>Price</th>
      <th>Year built</th>
      <th>Floors</th>
      <th>Basement</th>
      <th>Style</th>
      <th>Square footage</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.location %></td>
        <td><%= house.address %></td>
        <td><%= house.house_owner %></td>
        <td><%= house.price %></td>
        <td><%= house.year_built %></td>
        <td><%= house.floors %></td>
        <td><%= house.basement %></td>
        <td><%= house.style %></td>
        <td><%= house.square_footage %></td>
        <td><%= link_to 'Show', house %></td>
        <td><%= link_to 'Edit', edit_house_path(house) %></td>
        <td><%= link_to 'Destroy', house, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>


<br>

<%= link_to 'New House', new_house_path %>
<%= link_to 'Home', users_path %>
