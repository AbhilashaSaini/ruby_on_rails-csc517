<%= form_with(model: house, local: true) do |form| %>
  <% if house.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(house.errors.count, "error") %> prohibited this house from being saved:</h2>

      <ul>
        <% house.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :location %><br/>
    <%= form.text_field :location, id: :house_location, class: 'form-control', required: true %>
  </div>

  <div class="field">
    <%= form.label :address %><br/>
    <%= form.text_field :address, id: :house_address, class: 'form-control', required: true %>
  </div>

  <div class="field">
    <%= form.label :house_owner %><br/>
    <%= form.text_field :house_owner, id: :house_house_owner, class: 'form-control', required: true %>
  </div>

  <div class="field">
    <%= form.label :price %><br/>
    <%= form.text_field :price, id: :house_price, class: 'form-control', required: true %>
  </div>

  <div class="field">
    <%= form.label :year_built %><br/>
    <%= form.text_field :year_built, :placeholder => 'Year Format: YYYY', class: 'form-control', required: true %>
  </div>

  <div class="field">
    <%= form.label :floors %><br/>
    <%= form.select(:floors, House.floors.keys, {}, { :class=> "form-control" })%>
  </div>

  <div class="field">
    <%= form.label :basement %><br/>
    <%= form.select(:basement, House.basements.keys, {}, { :class=> "form-control" })%>
  </div>

  <div class="field">
    <%= form.label :style %><br/>
    <%= form.select(:style, House.styles.keys, {}, { :class=> "form-control" })%>
  </div>

  <div class="field">
    <%= form.label 'Size(Square footage)' %><br/>
    <%= form.text_field :square_footage, :placeholder => 'Such as 2000 ft2', class: 'form-control', required: true %>
  </div>
<br>
  <div class="actions">
    <%= form.submit "Done", class: "btn btn-outline-secondary btn-block" %>
  </div>
<% end %>
